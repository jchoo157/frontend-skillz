<div class="comment">
  <h4>Comment</h4>
  <center><%= form_for comment do |f| %>
    <p>
      <%= f.text_area :body, class: "text-area", cols: "50", rows: "5" %>
    </p>

    <p>
      <%= button_tag(type: 'submit', class: "btn btn-default submit-comment") do %>
            <i class="glyphicon glyphicon-comment"></i> Submit
      <% end %>
    </p>
  <% end %></center>
</div>