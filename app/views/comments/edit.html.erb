<div class="a-comment">
    <div class="edit">
  <h4>Edit Comment</h4>
  <center><%= form_for @comment do |f| %>
    <p>
      <%= f.text_area :body, class: "text-area", cols: "50", rows: "5" %>
    </p>

    <p>
      <%= button_tag(type: 'submit', class: "btn btn-default submit-edit") do %>
            <i class="glyphicon glyphicon-comment"></i> Submit
      <% end %>
    </p>
  <% end %></center>
</div>
  </p>
  <p>
    <%= link_to '<i class="glyphicon glyphicon-trash"></i> Delete'.html_safe, comment_path(@comment), class: 'delete-comment btn btn-default', method: :delete, remote: true %>

  </p>
</div>